<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Test configuration - minimal logging to reduce test noise -->
    
    <!-- Console Appender only for tests -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{30} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Logger configurations for testing -->
    
    <!-- Application loggers - WARN level to reduce test noise -->
    <logger name="com.fmps.autotrader" level="WARN" />
    
    <!-- Critical errors only from database -->
    <logger name="Exposed" level="WARN" />
    <logger name="com.zaxxer.hikari" level="WARN" />
    <logger name="org.flywaydb" level="WARN" />
    
    <!-- Reduce Ktor noise in tests -->
    <logger name="io.ktor" level="WARN" />
    <logger name="io.ktor.server" level="WARN" />
    <logger name="io.ktor.application" level="WARN" />
    
    <!-- Silence network libraries -->
    <logger name="io.netty" level="ERROR" />
    <logger name="org.eclipse.jetty" level="ERROR" />
    
    <!-- Root logger - WARN level for tests -->
    <root level="WARN">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>

