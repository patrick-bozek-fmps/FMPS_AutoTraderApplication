<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Production configuration - JSON structured logging, optimized performance -->
    
    <property name="LOG_DIR" value="${LOG_DIR:-./logs}" />
    <property name="APP_NAME" value="fmps-autotrader" />
    
    <!-- JSON Console Appender for production -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <includeStructuredArguments>true</includeStructuredArguments>
            <includeTags>true</includeTags>
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <message>message</message>
                <logger>logger</logger>
                <thread>thread</thread>
                <level>level</level>
                <levelValue>[ignore]</levelValue>
                <version>[ignore]</version>
            </fieldNames>
            <customFields>{"application":"${APP_NAME}","environment":"production"}</customFields>
        </encoder>
    </appender>
    
    <!-- JSON File Appender -->
    <appender name="FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}.json</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <includeStructuredArguments>true</includeStructuredArguments>
            <includeTags>true</includeTags>
            <customFields>{"application":"${APP_NAME}","environment":"production"}</customFields>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}.%d{yyyy-MM-dd}.%i.json</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- Larger files for production -->
                <maxFileSize>50MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- Keep 30 days of logs -->
            <maxHistory>30</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Error File Appender (JSON) -->
    <appender name="ERROR_FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}-error.json</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <includeStructuredArguments>true</includeStructuredArguments>
            <includeTags>true</includeTags>
            <includeCallerData>true</includeCallerData>
            <customFields>{"application":"${APP_NAME}","environment":"production","severity":"error"}</customFields>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}-error.%d{yyyy-MM-dd}.%i.json</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>90</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Metrics File Appender (JSON) -->
    <appender name="METRICS_FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}-metrics.json</file>
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
                <marker>METRICS</marker>
            </evaluator>
            <onMismatch>DENY</onMismatch>
            <onMatch>ACCEPT</onMatch>
        </filter>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"application":"${APP_NAME}","environment":"production","type":"metrics"}</customFields>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}-metrics.%d{yyyy-MM-dd}.json</fileNamePattern>
            <maxHistory>60</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Async Appenders for production performance -->
    <appender name="ASYNC_FILE_JSON" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE_JSON" />
        <queueSize>1024</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <neverBlock>true</neverBlock>
    </appender>
    
    <appender name="ASYNC_ERROR_FILE_JSON" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ERROR_FILE_JSON" />
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
        <neverBlock>false</neverBlock>
    </appender>
    
    <!-- Logger configurations for production -->
    
    <!-- Application loggers - INFO level -->
    <logger name="com.fmps.autotrader" level="INFO" />
    
    <!-- Database logging - INFO level -->
    <logger name="Exposed" level="INFO" />
    <logger name="com.zaxxer.hikari" level="INFO" />
    <logger name="org.flywaydb" level="INFO" />
    
    <!-- Ktor logging - INFO level -->
    <logger name="io.ktor" level="INFO" />
    <logger name="io.ktor.server" level="INFO" />
    <logger name="io.ktor.application" level="INFO" />
    
    <!-- Metrics logger -->
    <logger name="com.fmps.autotrader.metrics" level="INFO" additivity="false">
        <appender-ref ref="METRICS_FILE_JSON" />
    </logger>
    
    <!-- Reduce noise from third-party libraries -->
    <logger name="io.netty" level="WARN" />
    <logger name="org.eclipse.jetty" level="WARN" />
    
    <!-- Root logger - INFO level -->
    <root level="INFO">
        <appender-ref ref="CONSOLE_JSON" />
        <appender-ref ref="ASYNC_FILE_JSON" />
        <appender-ref ref="ASYNC_ERROR_FILE_JSON" />
    </root>
</configuration>

